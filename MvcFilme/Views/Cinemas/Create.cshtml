@model Cinema
@{
ViewData["Title"] = "Adicionar Cinema";
}

<div class="container adicionar-cinema bg-light pt-4 pb-5 ">
    <div class="row mb-4 px-5">
        <div class="col">
            <a asp-action="Index" class="link-secondary p-2">Voltar para a lista de cinemas</a>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-4 border p-3 border-success rounded">
            <h2 class="text-center">Adicionar Cinema</h2>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <hr />
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Multicine" />
                    <span asp-validation-for="Nome" class="text-danger invalid-msg"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Cidade" class="form-label"></label>
                    <input asp-for="Cidade" class="form-control" placeholder="São Paulo" />
                    <span asp-validation-for="Cidade" class="text-danger invalid-msg"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="UnidadeFederativa" class="form-label"></label>
                    <select asp-for="UnidadeFederativa" asp-items="@Html.GetEnumSelectList<UnidadesFederativas>()" class="form-select">
                        <option value=""></option>
                    </select>
                    <span asp-validation-for="UnidadeFederativa" class="text-danger invalid-msg"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Telefone" class="form-label"></label>
                    <input asp-for="Telefone" class="form-control" placeholder="(99) 9999-9999" />
                    <span asp-validation-for="Telefone" class="text-danger invalid-msg"></span>
                </div>
                <div class="d-flex px-5">
                    <input type="submit" value="Adicionar" class="btn btn-success w-100 h-100" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

