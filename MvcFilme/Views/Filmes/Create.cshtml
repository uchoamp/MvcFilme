@model Filme

@{
    ViewData["Title"] = "Novo Filme";
}

<div class="container novo-filme bg-light pt-4 pb-5 ">
    <div class="row mb-4 px-5">
        <div class="col">
            <a asp-action="Index" class="link-secondary p-2">Voltar para o Catálogo</a>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-md-4 border p-3 border-success rounded">
            <h2 class="text-center">Novo Filme</h2>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <hr />
                <div class="mb-3">
                    <label asp-for="Titulo" class="form-label"></label>
                    <input asp-for="Titulo" class="form-control" placeholder="Interestelar" />
                    <span asp-validation-for="Titulo" class="text-danger invalid-msg"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Lancamento" class="form-label"></label>
                    <input asp-for="Lancamento" class="form-control" />
                    <span asp-validation-for="Lancamento" class="text-danger invalid-msg"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Capa" class="form-label"></label>
                    <input asp-for="Capa" class="form-control" placeholder="https://example.com" type="url" />
                    <span asp-validation-for="Capa" class="text-danger invalid-msg"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Genero" class="form-label"></label>
                    <select asp-for="Genero" asp-items="FilmesViewModel.Generos" class="form-select">
                    </select>
                    <span asp-validation-for="Genero" class="text-danger invalid-msg"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Classificacao" class="form-label"></label>
                    <select asp-for="Classificacao" asp-items="FilmesViewModel.Classificacoes" class="form-select">
                    </select>
                    <span asp-validation-for="Classificacao" class="text-danger invalid-msg"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Sinopse" class="form-label"></label>
                    <textarea class="form-control" asp-for="Sinopse" rows="3"></textarea>
                    <span asp-validation-for="Sinopse"></span>
                </div>
                <div class="d-flex px-5">
                    <input type="submit" value="Salvar" class="btn btn-success w-100 h-100" />
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
